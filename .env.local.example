# Local Development Configuration
# This file contains environment variables for local development
# Copy this file to .env.local and modify the values as needed

# API Configuration for Local Development
# Base URL for the API endpoints (local development server)
VITE_API_BASE_URL=http://localhost:5173/api

# WebSocket base URL for real-time connections (local development server)
VITE_WS_BASE_URL=ws://localhost:5173/ws

# Application Configuration
# Name of the application (used for branding)
VITE_APP_NAME=RealtimeJam (Dev)

# The URL of the GitHub repository for the project
VITE_GITHUB_REPO=https://github.com/nicholasgriffintn/realtimejam.com

# Environment identifier
VITE_ENVIRONMENT=development

# WebSocket Configuration
# Maximum number of reconnection attempts before giving up
VITE_MAX_RECONNECT_ATTEMPTS=3

# Base delay in milliseconds between reconnection attempts (shorter for dev)
VITE_RECONNECT_BASE_DELAY=500

# Maximum delay in milliseconds between reconnection attempts (shorter for dev)
VITE_MAX_RECONNECT_DELAY=5000

# Development-specific settings
# Enable debug logging (if your application supports it)
VITE_DEBUG=true