# API Configuration
# Base URL for the API endpoints
VITE_API_BASE_URL=https://realtimejam.com/api

# WebSocket base URL for real-time connections
VITE_WS_BASE_URL=wss://realtimejam.com/ws

# Application Configuration
# Name of the application (used for branding)
VITE_APP_NAME=RealtimeJam

# The URL of the GitHub repository for the project
VITE_GITHUB_REPO=https://github.com/nicholasgriffintn/realtimejam.com

# Environment identifier (development, staging, production)
VITE_ENVIRONMENT=production

# WebSocket Configuration
# Maximum number of reconnection attempts before giving up
VITE_MAX_RECONNECT_ATTEMPTS=5

# Base delay in milliseconds between reconnection attempts
VITE_RECONNECT_BASE_DELAY=1000

# Maximum delay in milliseconds between reconnection attempts
VITE_MAX_RECONNECT_DELAY=30000
